<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaf"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_info_missionGroup"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="50dp" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    >
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:text="您可以选择第几周"
	         android:visibility="gone"
	    android:gravity="bottom"
	    />    
	<Spinner
        android:id="@+id/spinner_weeks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:entries="@array/weeks"
        android:visibility="gone"
        />
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    >
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:text="您可以选择星期几"
	         android:visibility="gone"
	    android:gravity="bottom"
	    />    
	<Spinner
        android:id="@+id/spinner_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:entries="@array/days"
        android:visibility="gone"
        />
	</LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请输入当天的任务标题"
        />
	<EditText 
	    android:id="@+id/editText_input_content"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:textSize="20sp"
	    />
	<TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请输入当天的任务内容"
        />
	<EditText 
	    android:id="@+id/editText_input_comment"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:textSize="20sp"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    >
	    <Button 
	        android:id="@+id/btn_addMission"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="添加"
	        />
	    <Button 
	        android:id="@+id/btn_addMission_next"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="下一个"
	        />
	    <Button 
	        android:id="@+id/btn_goback"
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_weight="1"
	        android:textSize="20sp"
	        android:text="返回"
	        />
	</LinearLayout>
	
</LinearLayout>